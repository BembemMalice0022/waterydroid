<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="notifications_new_message"
        android:title="@string/pref_title_new_message_notifications" />

    <SwitchPreference
        android:defaultValue="true"
        android:dependency="notifications_new_message"
        android:key="notifications_new_message_vibrate"
        android:title="@string/pref_title_vibrate" />

    <SwitchPreference
        android:defaultValue="false"
        android:dependency="notifications_new_message"
        android:key="notifications_persistent"
        android:title="@string/pref_persistent_notification" />

    <RingtonePreference
        android:defaultValue="content://settings/system/notification_sound"
        android:dependency="notifications_new_message"
        android:key="notifications_new_message_ringtone"
        android:ringtoneType="notification"
        android:title="@string/pref_title_ringtone" />

    <ListPreference
        android:defaultValue="120"
        android:dependency="notifications_new_message"
        android:entries="@array/pref_notification_frequency_titles"
        android:entryValues="@array/pref_notification_frequency_values"
        android:key="notification_frequency"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_notification_frequency" />

    <ListPreference
        android:defaultValue="10"
        android:dependency="notifications_new_message"
        android:entries="@array/pref_notification_snooze_titles"
        android:entryValues="@array/pref_snooze_frequency_values"
        android:key="snooze_interval"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_snooze_interval" />


</PreferenceScreen>
